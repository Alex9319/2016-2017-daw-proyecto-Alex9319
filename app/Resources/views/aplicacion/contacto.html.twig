{% extends 'layout.html.twig' %}

{% block content %}
    <form role="form" id="contact-form" method="post" action="{{ path('contacto') }}">
        <div class="form-group">
            <label for="name">Nombre</label>
            <input type="text" name="nombre" class="form-control" id="name" placeholder="Introduzca su Nombre" required >
        </div>
        <div class="form-group">
            <label for="surname">Apellidos</label>
            <input type="text" name="apellidos" class="form-control" id="surname" placeholder="Introduzca su Apellido" required>
        </div>
        <div class="form-group">
            <label for="email">Email address</label>
            <input type="email" name="email" class="form-control" id="email" placeholder="Introduzca su Email" required>
        </div>
        <div class="form-group">
            <label for="issue">Asunto</label>
            <input type="text" name="asunto" class="form-control" id="issue" placeholder="Introduzca el Asunto del mensaje" required>
        </div>
        <div class="form-group">
            <label for="message">Mensaje</label>
            <textarea name="contenido" class="form-control" id="message" rows="6" placeholder="Introduzca el Contenido del mensaje" required></textarea>
        </div>
        <div class="form-group" id="botones">
            <div class="col-md-4 col-md-offset-2">
                <button type="submit" name="enviar" class="btn btn-success"><i class="fa fa-check"></i> Enviar Email</button>
            </div>
            <div class="col-md-4 col-md-offset-2">
                <button type="button" name="volver" class="btn btn-info"><a href="{{ path('homepage') }}"><i class="fa fa-reply"></i> Volver</a></button>
            </div>
        </div>
    </form>
{% endblock %}

{% block title %}

{% endblock %}

