 {% extends 'layout.html.twig' %}
 {% block title %}

 {% endblock %}

{% block content %}
    {% if error %}
        <div class="alert alert-danger col-md-6 col-md-offset-3">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}
    <div class="cuadro col-md-6 col-md-offset-3">
        <form method="post" action="{{ path('comprobar') }}">
                <div class="form-group">
                    <label>Usuario</label>
                    <input type="text" name="_username" class="form-control" required="required" placeholder="Introduzca su nombre de usuario">
                </div>
                <div class="form-group">
                    <label>Contraseña</label>
                    <input type="password" name="_password" class="form-control"required="required" placeholder="Introduzca contraseña">
                </div>
                <div id="botones">
                    <div class="col-md-4 col-md-offset-2">
                        <button type="submit" class="btn btn-default btn-success">Entrar en la aplicación</button>
                    </div>
                    <div class="col-md-4 col-md-offset-2">
                        <a href="{{ path('homepage') }}" class="btn btn-default btn-info">Volver</a>
                    </div>
                </div>
         </form>
    </div>
{% endblock %}
