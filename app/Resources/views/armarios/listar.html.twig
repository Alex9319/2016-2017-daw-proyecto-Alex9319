{% extends 'layout.html.twig' %}

{% block content %}
    <h1>Listado de Armarios</h1>
    <a href="{{ path("nuevo_arm") }}" class="btn btn-success"><i class="fa fa-plus"></i> AÃ±adir armario</a>
    {# total items count #}
    <h5>Total de Armarios: {{ pagination.getTotalItemCount }}</h5>
    <p></p>
    <table class="table table-responsive table-hover">
        <thead>
        <tr>
            <th class="col-sm-1">{{ knp_pagination_sortable(pagination, 'Nombre', 'a.Nombre') }}</th>
            <th class="col-sm-1">Acciones</th>
        </tr>
        </thead>
        <tbody>
        {% for armario in pagination %}
            <tr>
                <td>{{ armario.nombre }}</td>
                <td>
                    <a href="{{ path('modificar_arm', {'id': armario.id}) }}" class="btn btn-xs btn-info" title="Modificar"><i class="fa fa-pencil"></i></a>
                    {% if is_granted('ROLE_ADMIN') %}<a href="{{ path('borrar_armario', {'id': armario.id}) }}" class="btn btn-xs btn-danger" title="Borrar"><i class="fa fa-trash"></i></a>{% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="container">
        <div class="col-md-6 col-md-offset-3">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
{% endblock %}
