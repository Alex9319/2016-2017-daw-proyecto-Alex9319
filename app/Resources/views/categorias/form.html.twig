{% extends 'layout.html.twig' %}

{% block content %}
    <h1>
        {% if categoria.id %}
            Modificar categoria {{ categoria.nombre }}
        {% else %}
            Nueva categoria
        {% endif %}
    </h1>
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <div class="form-group">
        <div class="col-sm-2"></div>
        <div class="col-sm-10">
            <button type="submit" name="enviar" class="btn btn-success"><i class="fa fa-check"></i>Guardar</button>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}