{% extends 'base.html.twig' %}

{% block title %}
    Museo Andres Segovia
{% endblock %}

{% block body %}
    {% set ruta = app.request.get('_route') %}
    {% block navbar %}
        <nav class="navbar navbar-default navbar-fixed-top barra">
            <div class="container">
                <div class="navbar-top">
                    {% if app.user %}
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Menu</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    {% endif %}
                    <a class="navbar-brand" href="{{ path('homepage') }}">Museo Andres Segovia</a>
                </div>
                <div id="navbar" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                    {% if app.user %}
                        {% if is_granted('ROLE_DOCUMENTADOR') %}<li{% if ruta == 'categorias' %} class="active"{% endif %}><a href="{{ path('listadoArticulos') }}"><i class="fa fa-child"></i> Articulos</a></li>{% endif %}
                        {% if is_granted('ROLE_DOCUMENTADOR') %}<li{% if ruta == 'aplicacion' %} class="active"{% endif %}><a href="#"><i class="fa fa-gear"></i> Web</a></li>{% endif %}
                        {% if is_granted('ROLE_ADMIN') %}<li{% if ruta == 'usuarios' %} class="active"{% endif %}><a href="{{ path('listadoUsuarios') }}"><i class="fa fa-users"></i> Usuarios</a></li>{% endif %}
                        {% if is_granted('ROLE_DOCUMENTADOR') %}<li{% if ruta == 'categorias' %} class="active"{% endif %}><a href="{{ path('listadoCategorias') }}"><i class="fa fa-child"></i> Categorias</a></li>{% endif %}
                        {% if is_granted('ROLE_DOCUMENTADOR') %}<li{% if ruta == 'armarios' %} class="active"{% endif %}><a href="{{ path('listadoArmarios') }}"><i class="fa fa-briefcase"></i> Armarios</a></li>{% endif %}
                        {% if is_granted('ROLE_DOCUMENTADOR') %}<li{% if ruta == 'archivador' %} class="active"{% endif %}><a href="{{ path('listadoArchivadores') }}"><i class="fa fa-book"></i> Archivadores</a></li>{% endif %}
                    {% endif %}
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        {% if app.user %}
                        <div class="btn-group">
                            <ul class="nav navbar-nav navbar-right">
                                <li id="usuario"><a>{{ app.user }}</a></li>
                            </ul>

                            <ul class="dropdown-menu barra" role="menu" id="desplegable">
                                <li><a href="{{ path('perfil') }}"><i class="fa fa-user"></i> Mi perfil</a></li>
                                <li class="divider"></li>
                                <li><a href="{{ path('salir') }}"><i class="fa fa-power-off"></i> Salir</a></li>
                            </ul>
                        </div>
                        {% else %}
                            <li><a href="{{ path('login') }}">Acceder</a></li>
                        {% endif %}
                    </ul>
                </div><!--/.nav-collapse -->
            </div>
        </nav>
    {% endblock %}
    <div class="container">
        {% if app.session.flashBag.has('estado') %}
            {% set mensajes = app.session.flashBag.get('estado') %}
            {% for mensaje in mensajes %}
                <div class="alert alert-success alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Cerrar"><span aria-hidden="true">&times;</span></button>
                    {{ mensaje }}
                </div>
            {% endfor %}
        {% endif %}
        {% if app.session.flashBag.has('error') %}
            {% set mensajes = app.session.flashBag.get('error') %}
            {% for mensaje in mensajes %}
                <div class="alert alert-danger alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Cerrar"><span aria-hidden="true">&times;</span></button>
                    {{ mensaje }}
                </div>
            {% endfor %}
        {% endif %}
        {% block content %}
            <div class="col-md-6 col-md-offset-3">

            </div>
        {% endblock %}
    </div>
{% endblock %}
