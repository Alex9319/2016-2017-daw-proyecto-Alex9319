{% extends 'layout.html.twig' %}

{% block content %}
    <h1>Listado de Usuarios</h1>
    <a href="{{ path("nusuario") }}" class="btn btn-success"><i class="fa fa-plus"></i> AÃ±adir usuario</a>
    {# total items count #}
    <h5>Total de Usuarios: {{ pagination.getTotalItemCount }}</h5>
    <p></p>
    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th class="col-sm-4">{{ knp_pagination_sortable(pagination, 'Nombre', 'a.Nombre') }}</th>
            <th class="col-sm-4">{{ knp_pagination_sortable(pagination, 'Apellidos', 'a.Apellidos') }}</th>
            <th class="col-sm-3">{{ knp_pagination_sortable(pagination, 'Usuario', 'a.Usuario') }}</th>
            <th class="col-sm-1"></th>
        </tr>
        </thead>
        <tbody>
        {% for usuario in pagination %}
            <tr>
                <td>{{ usuario.nombre }}</td>
                <td>{{ usuario.apellidos }}</td>
                <td>{{ usuario.usuario }}</td>
                <td>
                    <a href="{{ path('musuarios', {'id': usuario.id}) }}" class="btn btn-xs btn-info" title="Modificar"><i class="fa fa-pencil"></i></a>
                    {% if is_granted('ROLE_ADMIN') %}<a href="{{ path('borrar_usuario', {'id': usuario.id}) }}" class="btn btn-xs btn-danger" title="Borrar"><i class="fa fa-trash"></i></a>{% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="container">
        <div class="col-md-6 col-md-offset-3">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
{% endblock %}
